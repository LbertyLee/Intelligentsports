<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dromara.teachers.mapper.DailyHealthMetricsMapper">

    <resultMap type="org.dromara.teachers.domain.entity.DailyHealthMetrics" id="TeacherDailyHealthMetricsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="braceletId" column="bracelet_id" jdbcType="VARCHAR"/>
        <result property="statisticalTime" column="statistical_time" jdbcType="INTEGER"/>
        <result property="maxBloodOxygen" column="max_blood_oxygen" jdbcType="NUMERIC"/>
        <result property="avgBloodOxygen" column="avg_blood_oxygen" jdbcType="NUMERIC"/>
        <result property="minBloodOxygen" column="min_blood_oxygen" jdbcType="NUMERIC"/>
        <result property="maxHeartRate" column="max_heart_rate" jdbcType="NUMERIC"/>
        <result property="avgHeartRate" column="avg_heart_rate" jdbcType="NUMERIC"/>
        <result property="minHeartRate" column="min_heart_rate" jdbcType="NUMERIC"/>
        <result property="createDept" column="create_dept" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectBatchBraceletsIdList" resultType="org.dromara.teachers.domain.vo.DailyHealthMetricsVo">
        select * from teacher_daily_health_metrics where bracelet_id in
        <foreach collection="braceletsIdList" item="braceletId" separator="," open="(" close=")">
            #{braceletId}
        </foreach>
    </select>

</mapper>

